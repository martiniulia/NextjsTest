rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Clothing images: users can read all, but only write to their own folder
    match /clothing/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Outfit images: users can read all, but only write to their own folder
    match /outfits/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: allow read for authenticated users, write for authenticated users
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
